/*3. Improvise(1) by taking inputs in main() and passing the same to adding() and difference(). */

#include<iostream>

using namespace std;
class Add{
	public:
	void adding(int num1, int num2){
	cout<<"The sum of numbers is "<<num1+num2<<endl;
	
	}
};

class Diff:public Add
{
	
	public:
	void difference(int num1, int num2){
	cout<<"The difference of numbers is "<<num1-num2<<endl;
	
	}

};

int main(){
	class Diff d1;
	int num1, num2;
	cout<<"Enter two integers"<<endl;
	cin>>num1>>num2;
	d1.adding(num1, num2);
	d1.difference(num1, num2);
	
	return(0);

}
